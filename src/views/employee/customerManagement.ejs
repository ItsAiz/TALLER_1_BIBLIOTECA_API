                                                    <button class="btn btn-primary"
                                                        onclick="editUser('<%- encodeURIComponent(JSON.stringify(customer)) %>')"
                                                        data-toggle="modal" data-target="#editModal">Edit</button>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
