                                                        <button class="btn btn-primary"
                                                            onclick="editBook('<%- encodeURIComponent(JSON.stringify(book)) %>')"
                                                            data-toggle="modal" data-target="#editModal">Edit</button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!--END TABLE-->

                        <div class="modal fade" id="editModal" tabindex="-1" role="dialog"
